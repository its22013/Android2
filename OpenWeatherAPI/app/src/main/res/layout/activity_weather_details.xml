<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue_background"
    tools:context=".WeatherDetailsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- TextView: 現在の場所 -->

            <TextView
                android:id="@+id/current_location"
                android:layout_width="match_parent"
                android:layout_height="126dp"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:text="@string/tool_tp"
                android:textSize="40sp" />

            <!-- TextView: 気温 -->

            <TextView
                android:id="@+id/current_temperature"
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/current_location"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:text="@string/temperature_label"
                android:textSize="20sp" />

            <!-- TextView: 体感気温 -->

            <!-- TextView: 湿度 -->
            <TextView
                android:id="@+id/feels_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/current_temperature"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="@string/feels_like_label"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/humidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/feels_like"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="@string/humidity_label"
                android:textSize="20sp" />


            <ImageView
                android:id="@+id/weatherIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/humidity"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_launcher_foreground" />

            <TextView
                android:id="@+id/weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/weatherIcon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="@string/Weather_label"
                android:textSize="20sp" />

            <!-- TextView: 気圧 -->
            <TextView
                android:id="@+id/pressure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/weather"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="@string/pressure_label"
                android:textSize="20sp" />

            <!-- LinearLayout: 予報詳細と3時間ごとの予報 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#80FFFFFF"
                android:padding="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_below="@+id/pressure"
                android:layout_centerHorizontal="true">

                <!-- TextView: 予報詳細 -->
                <TextView
                    android:id="@+id/forecast_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="Forecast Details: --" />

                <!-- TextView: 3時間ごとの予報 -->
                <TextView
                    android:id="@+id/hourly_forecast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textSize="20sp"
                    android:layout_below="@+id/forecast_details"
                    android:text="3 Hourly Forecast: --" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>